.van-toast--default .van-loading
  margin 0.2rem 0 !important
.van-loading
  height .6rem!important
  width @height
.van-toast--default
  width 1.9rem!important
  height @width
.van-toast--text
  padding .16rem 0.24rem!important
.van-toast
  line-height .4rem!important
  text-align: center!important

